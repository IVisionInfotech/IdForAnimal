<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.idforanimal.activity.LoginActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.03"
                    android:text="Welcome Back!"
                    android:textColor="@color/lightBlack"
                    android:textSize="@dimen/_16sdp" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_3sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.03"
                    android:text="to"
                    android:textColor="@color/lightBlack"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:fontFamily="@font/bold"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.03"
                    android:text="@string/app_name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_16sdp" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_3sdp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/regular"
                android:includeFontPadding="false"
                android:text="Hello there, login to continue"
                android:textColor="@color/darkerTextColor"
                android:textSize="13sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/rdgType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/rdoEmployee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/regular"
                        android:includeFontPadding="false"
                        android:padding="@dimen/_5sdp"
                        android:text="Employee"
                        android:textColor="@color/lightBlack"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rdoCustomer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/regular"
                        android:includeFontPadding="false"
                        android:padding="@dimen/_5sdp"
                        android:text="Customer"
                        android:textColor="@color/lightBlack"
                        android:textSize="14sp" />

                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:hint="Enter Contact"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    app:boxBackgroundMode="none"
                    app:boxStrokeWidth="0dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/gray"
                    app:errorEnabled="false"
                    app:expandedHintEnabled="false"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:backgroundTint="@color/transparent"
                        android:fontFamily="@font/regular"
                        android:imeOptions="actionNext"
                        android:includeFontPadding="false"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingStart="0dp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="0dp"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_13sdp" />

                </com.google.android.material.textfield.TextInputLayout>

                <in.aabhasjindal.otptextview.OtpTextView
                    android:id="@+id/otpTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/lightBlack"
                    android:textSize="@dimen/_13sdp"
                    app:bar_active_color="@color/lightBlack"
                    app:bar_height="@dimen/_1sdp"
                    app:bar_inactive_color="@color/darkGray"
                    app:box_margin="@dimen/_8sdp"
                    app:height="@dimen/_45sdp"
                    app:length="4"
                    app:otp_box_background="@drawable/edit_text_background"
                    app:otp_box_background_active="@drawable/active_edit_text_background"
                    app:otp_box_background_error="@drawable/error_edit_text_background"
                    app:otp_text_size="@dimen/_13sdp"
                    app:width="@dimen/_45sdp" />

                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/regular"
                    android:text="Forgot Password?"
                    android:textAllCaps="false"
                    android:textColor="@color/textHintColor"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnSubmit"
                    style="@style/buttonPrimaryRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:text="Login"
                    android:textColor="#F0F0F0" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>