<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.audit.ViewAuditAnimalActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_primary" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:background="@color/colorPrimary"
                    android:id="@+id/llOffline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/extrabold"
                        android:includeFontPadding="false"
                        android:text="Offline AnimalList"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/two"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_2sdp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/llTotalCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingVertical="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/extrabold"
                                    android:includeFontPadding="false"
                                    android:text="Total"
                                    android:textAlignment="center"
                                    android:textColor="@color/textColor"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/semibold"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/textColor"
                                    android:textSize="14sp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <View
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/black" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/llAuditCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingVertical="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/extrabold"
                                    android:includeFontPadding="false"
                                    android:text="Audit"
                                    android:textAlignment="center"
                                    android:textColor="@color/textColor"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvAudit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/semibold"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/textColor"
                                    android:textSize="14sp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/llPendingCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingVertical="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/extrabold"
                                    android:includeFontPadding="false"
                                    android:text="Pending"
                                    android:textAlignment="center"
                                    android:textColor="@color/textColor"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvPending"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/semibold"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/textColor"
                                    android:textSize="14sp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <View
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/black" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/llExtraCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingVertical="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/extrabold"
                                    android:includeFontPadding="false"
                                    android:text="Extra"
                                    android:textAlignment="center"
                                    android:textColor="@color/textColor"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvExtra"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/semibold"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/textColor"
                                    android:textSize="14sp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/llDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_2sdp"
                            android:foreground="@color/light_blue"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardMaxElevation="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/regular"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:text="Microchip No :"
                                    android:textColor="@color/textHintColor"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/tvRFID"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/medium"
                                    android:includeFontPadding="false"
                                    android:padding="@dimen/_5sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/regular"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:text="Visual Tag No :"
                                    android:textColor="@color/textHintColor"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/txtVisualNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_13sdp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/regular"
                                        android:includeFontPadding="false"
                                        android:text="Animal Type :"
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/tvAnimalType"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/llValidDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/regular"
                                        android:includeFontPadding="false"
                                        android:text="Animal Valid Upto :"
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/tvValidDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/regular"
                                        android:includeFontPadding="false"
                                        android:text="Owner Name : "
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/tvOwnerName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/regular"
                                        android:includeFontPadding="false"
                                        android:text="Owner Contact : "
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/tvOwnerContact"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11sdp" />

                                    <TextView
                                        android:id="@+id/tvViewMore"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_10sdp"
                                        android:drawableEnd="@drawable/ic_next"
                                        android:drawableTint="@color/colorPrimary"
                                        android:fontFamily="@font/semibold"
                                        android:text="@string/view_more"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/_11sdp" />

                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/llOwnerValid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/regular"
                                        android:includeFontPadding="false"
                                        android:text="Owner Valid Upto : "
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/tvOwnerValidDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11sdp" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:background="@color/darkGray" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:src="@drawable/catching" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/regular"
                                        android:includeFontPadding="false"
                                        android:text="Last Catching : "
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/tvLastCatchingDetail"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/regular"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11sdp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:src="@drawable/tretment1" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/regular"
                                        android:includeFontPadding="false"
                                        android:text="Last Treatment : "
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/tvLastTreatmentDetail"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/regular"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:src="@drawable/vaccinated1" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/regular"
                                        android:includeFontPadding="false"
                                        android:text="Last Vaccination : "
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/tvLastVaccinationDetail"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/regular"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11sdp" />

                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvDeathAnimal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/_80sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@drawable/rounded_accent_background"
                                android:backgroundTint="@color/green"
                                android:fontFamily="@font/regular"
                                android:includeFontPadding="false"
                                android:padding="@dimen/_8sdp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/ivImage"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_gravity="end"
                                android:layout_margin="5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/animal_bg"
                                app:shapeAppearanceOverlay="@style/ImageStyle_Corners_Cut_Square" />

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>