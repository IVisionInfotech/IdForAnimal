<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_weight="1"
        android:fontFamily="@font/bold"
        android:text="@string/app_name"
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/darkGray" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:includeFontPadding="false"
            android:text="Death Date"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_11sdp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_12sdp">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/calendar"
                app:tint="@color/edit_text_icon_color_selector" />

            <TextView
                android:id="@+id/etDeathDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:fontFamily="@font/regular"
                android:hint="Select Date"
                android:includeFontPadding="false"
                android:padding="@dimen/_3sdp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textHintColor"
                android:textSize="@dimen/_13sdp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:includeFontPadding="false"
            android:text="Disposed Date"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_11sdp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_12sdp">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/calendar"
                app:tint="@color/edit_text_icon_color_selector" />

            <TextView
                android:id="@+id/etDisposedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:fontFamily="@font/regular"
                android:hint="Select Date"
                android:includeFontPadding="false"
                android:padding="@dimen/_3sdp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textHintColor"
                android:textSize="@dimen/_13sdp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/medium"
            android:includeFontPadding="false"
            android:text="Disposed Receipt"
            android:textColor="@color/textColor"
            android:textSize="13sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            app:boxBackgroundMode="none"
            app:boxStrokeWidth="0dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/gray"
            app:errorEnabled="false"
            app:expandedHintEnabled="false"
            app:hintEnabled="false"
            app:placeholderText="Enter Disposed Receipt"
            app:placeholderTextColor="@color/textHintColor"
            app:startIconDrawable="@drawable/tag"
            app:startIconTint="@color/edit_text_icon_color_selector">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDisposed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/regular"
                android:imeOptions="actionDone"
                android:includeFontPadding="false"
                android:inputType="text"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_13sdp" />

        </com.google.android.material.textfield.TextInputLayout>  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/medium"
            android:includeFontPadding="false"
            android:text="Death Certificate No"
            android:textColor="@color/textColor"
            android:textSize="13sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            app:boxBackgroundMode="none"
            app:boxStrokeWidth="0dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/gray"
            app:errorEnabled="false"
            app:expandedHintEnabled="false"
            app:hintEnabled="false"
            app:placeholderText="Enter Death Certificate No"
            app:placeholderTextColor="@color/textHintColor"
            app:startIconDrawable="@drawable/tag"
            app:startIconTint="@color/edit_text_icon_color_selector">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDeathCertificateNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/regular"
                android:imeOptions="actionDone"
                android:includeFontPadding="false"
                android:inputType="text"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_13sdp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSubmit"
            style="@style/buttonPrimaryRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:includeFontPadding="false"
            android:text="Submit" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>