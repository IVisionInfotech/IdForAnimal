<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:includeFontPadding="false"
                        android:text="@string/date"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_11sdp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_8sdp">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/calendar"
                            app:tint="@color/edit_text_icon_color_selector" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:fontFamily="@font/regular"
                            android:hint="Select Date"
                            android:includeFontPadding="false"
                            android:padding="@dimen/_3sdp"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/textHintColor"
                            android:textSize="@dimen/_13sdp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:includeFontPadding="false"
                        android:text="@string/Adate"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_11sdp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_8sdp">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/calendar"
                            app:tint="@color/edit_text_icon_color_selector" />

                        <TextView
                            android:id="@+id/tvApplicationDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:fontFamily="@font/regular"
                            android:hint="Select Date"
                            android:includeFontPadding="false"
                            android:padding="@dimen/_3sdp"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/textHintColor"
                            android:textSize="@dimen/_13sdp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/medium"
                android:includeFontPadding="false"
                android:text="@string/vehicle_reg_no"
                android:textColor="@color/textColor"
                android:textSize="13sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                app:boxBackgroundMode="none"
                app:boxStrokeWidth="0dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/gray"
                app:errorEnabled="false"
                app:expandedHintEnabled="false"
                app:hintEnabled="false"
                app:placeholderText="Enter Vehicle Reg No"
                app:placeholderTextColor="@color/textHintColor"
                app:startIconDrawable="@drawable/truck"
                app:startIconTint="@color/edit_text_icon_color_selector">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVehicleNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/regular"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:includeFontPadding="false"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/medium"
                android:includeFontPadding="false"
                android:text="Driver Name"
                android:textColor="@color/textColor"
                android:textSize="13sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                app:boxBackgroundMode="none"
                app:boxStrokeWidth="0dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/gray"
                app:errorEnabled="false"
                app:expandedHintEnabled="false"
                app:hintEnabled="false"
                app:placeholderText="Enter Driver Name"
                app:placeholderTextColor="@color/textHintColor"
                app:startIconDrawable="@drawable/user"
                app:startIconTint="@color/edit_text_icon_color_selector">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDriverName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/regular"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:includeFontPadding="false"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/medium"
                android:includeFontPadding="false"
                android:text="Driver Contact"
                android:textColor="@color/textColor"
                android:textSize="13sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                app:boxBackgroundMode="none"
                app:boxStrokeWidth="0dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/gray"
                app:errorEnabled="false"
                app:expandedHintEnabled="false"
                app:hintEnabled="false"
                app:placeholderText="Enter Driver Contact"
                app:startIconDrawable="@drawable/phone"
                app:placeholderTextColor="@color/textHintColor"
                app:startIconTint="@color/edit_text_icon_color_selector">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDriverContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/regular"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="number"
                    android:includeFontPadding="false"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/medium"
                android:includeFontPadding="false"
                android:text="Alternative Contact"
                android:textColor="@color/textColor"
                android:textSize="13sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                app:boxBackgroundMode="none"
                app:boxStrokeWidth="0dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/gray"
                app:errorEnabled="false"
                app:expandedHintEnabled="false"
                app:hintEnabled="false"
                app:placeholderText="Enter Alternative Contact"
                app:placeholderTextColor="@color/textHintColor"
                app:startIconDrawable="@drawable/phone"
                app:startIconTint="@color/edit_text_icon_color_selector">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAlternativeContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/regular"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="number"
                    android:includeFontPadding="false"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/medium"
                android:includeFontPadding="false"
                android:text="Cleaner Name"
                android:textColor="@color/textColor"
                android:textSize="13sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                app:boxBackgroundMode="none"
                app:boxStrokeWidth="0dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/gray"
                app:errorEnabled="false"
                app:expandedHintEnabled="false"
                app:hintEnabled="false"
                app:placeholderText="Enter Cleaner Name"
                app:placeholderTextColor="@color/textHintColor"
                app:startIconDrawable="@drawable/user"
                app:startIconTint="@color/edit_text_icon_color_selector">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCleanerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/regular"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:includeFontPadding="false"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/medium"
                android:includeFontPadding="false"
                android:text="Application No"
                android:textColor="@color/textColor"
                android:textSize="13sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                app:boxBackgroundMode="none"
                app:boxStrokeWidth="0dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/gray"
                app:errorEnabled="false"
                app:expandedHintEnabled="false"
                app:hintEnabled="false"
                app:placeholderText="Enter Application No"
                app:placeholderTextColor="@color/textHintColor"
                app:startIconDrawable="@drawable/fir"
                app:startIconTint="@color/edit_text_icon_color_selector">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etApplicationNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/regular"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:includeFontPadding="false"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/medium"
                android:includeFontPadding="false"
                android:text="Details Of Conveyance"
                android:textColor="@color/textColor"
                android:textSize="13sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                app:boxBackgroundMode="none"
                app:boxStrokeWidth="0dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/gray"
                app:errorEnabled="false"
                app:expandedHintEnabled="false"
                app:hintEnabled="false"
                app:placeholderText="Enter Details Of Conveyance"
                app:placeholderTextColor="@color/textHintColor"
                app:startIconDrawable="@drawable/remarks"
                app:startIconTint="@color/edit_text_icon_color_selector">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/regular"
                    android:imeOptions="actionDone"
                    android:includeFontPadding="false"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/medium"
                android:includeFontPadding="false"
                android:text="Remarks"
                android:textColor="@color/textColor"
                android:textSize="13sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                app:boxBackgroundMode="none"
                app:boxStrokeWidth="0dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/gray"
                app:errorEnabled="false"
                app:expandedHintEnabled="false"
                app:hintEnabled="false"
                app:placeholderText="Enter Remarks"
                app:placeholderTextColor="@color/textHintColor"
                app:startIconDrawable="@drawable/remarks"
                app:startIconTint="@color/edit_text_icon_color_selector">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/regular"
                    android:imeOptions="actionDone"
                    android:includeFontPadding="false"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13sdp" />

            </com.google.android.material.textfield.TextInputLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/layoutBackground"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/_15sdp"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_button_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_8sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:includeFontPadding="false"
                android:text="Next step"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/next"
                app:tint="@color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>